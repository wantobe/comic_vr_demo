<krpano>
	<include url="%SWFPATH%/xml/common.xml" />
	<include url="%SWFPATH%/xml/controllers/MotionComicController.xml" />
	
	<include url="%SWFPATH%/xml/animations/anims.xml" />
	<include url="%SWFPATH%/xml/command/command.xml" />
	<include url="%SWFPATH%/xml/util/AnalyticalEngine.xml" />
	
	<scene name="motionComic" onstart="initScene();">
		<view fovtype="VFOV" limitview="lookat" fov="90" fovmin="20" fovmax="160" />
		<preview url="%SWFPATH%/img/bg/%$bgId%/preview.jpg" />
		<image fov="10.0">
			<cube url="%SWFPATH%/img/bg/%$bgId%/mobile_%s.jpg" />
		</image>
		
		<hotspot  distorted="true" url="%SWFPATH%/img/index/logo.png"  oy="-550" scale="2" depth="2000" onover="tween(scale,2.3);" onout="tween(scale,2);" vr_timeout="500" onclick="webvr.enterVR();" zorder="2"/>
		<hotspot  distorted="true" url="%SWFPATH%/img/home.png" ath="0" oy="680" scale="1" depth="2000" width="120" height="prop" onover="tween(scale,1.2);" onout="tween(scale,1);" vr_timeout="500"  zorder="5" onclick="go_home()"/>
		
	</scene>
</krpano>
