<krpano onstart="loadscene(dynamic_comic_scene);">

	<scene name="dynamic_comic_scene" onstart="initScene();">
		<include url="%SWFPATH%/plugins/webvr.xml" />
		<include url="%SWFPATH%/xml/common.xml" />
		<include url="%SWFPATH%/xml/animations/anims.xml"></include>
		<include url="%SWFPATH%/xml/command/command.xml"></include>
		<include url="%SWFPATH%/xml/util/AnalyticalEngine.xml"></include>
		<include url="%SWFPATH%/xml/controllers/MotionComicController.xml"></include>
		<view fovtype="VFOV" limitview="lookat" fov="90" fovmin="20" fovmax="160" />
		<preview url="%SWFPATH%/img/bg/%$bgId%/preview.jpg" />
		<image fov="10.0">
			<cube url="%SWFPATH%/img/bg/%$bgId%/mobile_%s.jpg" />
		</image>
		
		<hotspot  distorted="true" url="%SWFPATH%/img/index/logo.png"  oy="-550" scale="2" depth="2000" onover="tween(scale,2.3);" onout="tween(scale,2);" vr_timeout="500" onclick="webvr.enterVR();" zorder="2"/>
		<hotspot  distorted="true" url="%SWFPATH%/img/home.png" ath="0" oy="680" scale="1" depth="2000" width="120" height="prop" onover="tween(scale,1.2);" onout="tween(scale,1);" vr_timeout="500"  zorder="5" onclick="select_btn_yse_no(clearAllTimeOut();clear_hotspot_of_canvas();loadpano(%SWFPATH%/xml/scenes/IndexScene.xml,null,null,BLEND(1)))"/>
		
	</scene>
</krpano>
