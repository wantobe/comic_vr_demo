<krpano onstart="loadscene(gallery)">
	<include url="%SWFPATH%/xml/common.xml" />
	<include url="%SWFPATH%/xml/controllers/GalleryController.xml" />
	
	<include url="%SWFPATH%/xml/widget/Gallery.xml" />
	
	<scene name="gallery" onstart="initScene();">
		<view fovtype="VFOV" limitview="lookat" fov="90" fovmin="0" fovmax="360" />
		<image fov="10.0" if="hasBg==true">
			<cube url="%SWFPATH%/img/bg/%$bgId%/mobile_%s.jpg" />
		</image>
		<hotspot  distorted="true" url="%SWFPATH%/img/home.png" ath="0" oy="680" scale="1" depth="2000" width="120" height="prop" onover="tween(scale,1.2);" onout="tween(scale,1);" vr_timeout="500"  zorder="5" onclick="go_home()"/>
		
		<hotspot  name="atuoBtn" distorted="true" url="%SWFPATH%/img/aut.png"  oy="550" ox="385" scale="1.4" depth="2000"  vr_timeout="500" zorder="2" onclick="select_btn_yse_no(toggle_play())"/>
	</scene>

</krpano>
