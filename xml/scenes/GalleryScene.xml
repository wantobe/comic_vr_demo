<krpano onstart="loadscene(staticComic)">
	<include url="%SWFPATH%/xml/common.xml" />
	<include url="%SWFPATH%/plugins/webvr.xml" />
	<include url="%SWFPATH%/xml/widget/Gallery.xml" />
	<include url="%SWFPATH%/xml/command/command.xml"></include>
	<include url="%SWFPATH%/xml/controllers/GalleryController.xml" />
	<scene name="staticComic" onstart="initScene();">
		<view fovtype="VFOV" limitview="lookat" fov="90" fovmin="0" fovmax="360" />
		<preview url="%SWFPATH%/img/bg/%$bgId%/preview.jpg" />
		<image fov="10.0">
			<cube url="%SWFPATH%/img/bg/%$bgId%/mobile_%s.jpg" />
		</image>
		<hotspot  distorted="true" url="%SWFPATH%/img/index/logo.png"  oy="-550" scale="2" depth="2000" onover="tween(scale,2.3);" onout="tween(scale,2);" vr_timeout="500" onclick="webvr.enterVR();" zorder="2"/>
		<hotspot  distorted="true" url="%SWFPATH%/img/home.png" ath="0" oy="680" scale="1" depth="2000" width="120" height="prop" onover="tween(scale,1.2);" onout="tween(scale,1);" vr_timeout="500"  zorder="5" onclick="select_btn_yse_no(clearinterval(gallaryinterval);clear_hotspot_of_canvas();loadpano(%SWFPATH%/xml/scenes/IndexScene.xml,index=2,REMOVESCENES,BLEND(1)))"/>

		
		<hotspot  name="atuoBtn" distorted="true" url="%SWFPATH%/img/aut.png"  oy="550" ox="285" scale="1.4" depth="2000"  vr_timeout="500" zorder="2" onclick="select_btn_yse_no(toggle_play())"/>
	</scene>

</krpano>
