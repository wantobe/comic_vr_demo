<krpano onstart="loadscene(index);playMuzic();">
<plugin name="soundinterface"
        url="%SWFPATH%/plugins/soundinterface.swf"
        alturl="%SWFPATH%/plugins/soundinterface.js"
        preload="true"
        rootpath=""
        volume="5.0"
        mute="true"
        keep="true"
        />
	<scene name="index" onstart="initScene();play_scene(get(page));">
		<include url="%SWFPATH%/plugins/webvr.xml" />
		<include url="%SWFPATH%/xml/common.xml" />
		<include url="%SWFPATH%/xml/animations/anims.xml"></include>
		<include url="%SWFPATH%/xml/command/command.xml"></include>
		<include url="%SWFPATH%/xml/util/AnalyticalEngine.xml"></include>
		<include url="%SWFPATH%/xml/controllers/parenting_books/ParentingBooksCtr.xml"></include>
		<!--<skin_settings design_text_css="color:#FFFFFF; font-family:Arial;"/>-->
		<view fovtype="VFOV" limitview="lookat" fov="90" fovmin="20" fovmax="160" />
		<preview url="%SWFPATH%/img/bg/%$bgId%/preview.jpg" />
		<image fov="10.0">
			<cube url="%SWFPATH%/img/bg/%$bgId%/mobile_%s.jpg" />
		</image>
		
		<hotspot  distorted="true" url="%SWFPATH%/img/index/logo.png"  oy="-550" scale="2" depth="2000" onover="tween(scale,2.3);" onout="tween(scale,2);" vr_timeout="500" onclick="webvr.enterVR();" zorder="2"/>
		<hotspot  distorted="true" url="%SWFPATH%/img/home.png" ath="0" oy="650" scale="1" depth="2000" width="120" height="prop" onover="tween(scale,1.2);" onout="tween(scale,1);" vr_timeout="500"  zorder="5" onclick="select_btn_yse_no(clearAllTimeOut();clear_hotspot_of_canvas();loadpano(%SWFPATH%/xml/scenes/IndexInterface.xml,index=2,null,BLEND(1)))"/>
		
        <!-- start playing the sound -->
	
	        
	        
	</scene>
	
	<action name="playMuzic" type="Javascript" devices="html5">
		<![CDATA[
			var page = krpano.get("page")+1;
			var url = "%SWFPATH%/img/parenting_books/music/kim-"+page+".mp3";
			krpano.call("playsound(bgsnd, "+url+", 1);");
		]]>
	</action>
	
</krpano>
